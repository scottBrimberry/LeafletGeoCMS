doctype 5
html(lang="en")
  head
    meta charset="utf-8"
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"
    title== yield :title
    meta content="" name="description"
    meta content="width=device-width" name="viewport"
    = stylesheet_link_tag :backend
  body

    #wrap
      .navbar
        .navbar-inner
          .container
            ul.nav
              li= link_to backend_root_path, :class => "brand" do
                = image_tag "dotgeocms.png", :width => "128", :height => "33"
              - if logged_in?
                li= link_to "Categories", backend_categories_path
                li= link_to "Data sources", backend_data_sources_path
                li= link_to "Users", backend_users_path
                li= link_to "Preferences", edit_backend_preferences_path
            - if logged_in?
              ul.nav.pull-right
                li= link_to "Logout", logout_path
      .container.main-container
        == yield
        #push
    == render "layouts/footer"
    = javascript_include_tag :backend
    == yield :javascripts
